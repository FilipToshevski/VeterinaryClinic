@model List<VeterinaryClinic.Models.Vaccine>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th class="py-3">
                    <i class="fas fa-syringe me-2"></i>Vaccine Name
                </th>
                <th class="text-end py-3">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vaccine in Model)
            {
                <tr>
                    <td class="py-3">
                        <span class="fw-medium">@vaccine.Name</span>
                    </td>
                    <td class="text-end">
                        <form asp-action="DeleteVaccine" method="post"
                              onsubmit="return confirm('Are you sure you want to delete @vaccine.Name?');">
                            <input type="hidden" name="id" value="@vaccine.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt me-1"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>