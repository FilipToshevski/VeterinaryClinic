     {
        .hero-section

    {
        padding: 3rem 0;
        text-align: center;
    }

    .hero-title {
        font-size: 2rem;
    }

    .hero-buttons .btn {
        display: block;
        width: 100%;
        margin-bottom: 1rem;
    }

        .hero-buttons .btn:last-child {
            margin-bottom: 0;
        }

