@model VeterinaryClinic.ViewModels.PetEditViewModel

<div class="edit-pet-container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Pet</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="EditPet" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Age" class="form-label"></label>
                    <input asp-for="Age" type="number" class="form-control" min="0" max="50" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="AnimalType" class="form-label"></label>
                    <select asp-for="AnimalType" asp-items="Model.AnimalTypeOptions" class="form-select">
                        <option value="">-- Select Animal Type --</option>
                    </select>
                    <span asp-validation-for="AnimalType" class="text-danger"></span>
                </div>

                
                
                <div class="card mt-4 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5><i class="fas fa-syringe me-2"></i>Vaccine Management</h5>
                    </div>
                    <div class="card-body">
                        <h6>Add Vaccine</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Select Existing Vaccine</label>
                                <select asp-for="VaccineSelection.SelectedVaccineId" class="form-select">
                                    <option value="">-- Select Vaccine --</option>
                                    @foreach (var vaccine in Model.VaccineSelection.ExistingVaccines)
                                    {
                                        <option value="@vaccine.Value">@vaccine.Text</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <!-- Current Vaccines List -->
                        <h6 class="mt-4">Current Vaccines</h6>
                        @if (Model.CurrentVaccines.Any())
                        {
                            <ul class="list-group">
                                @foreach (var vaccine in Model.CurrentVaccines)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        @vaccine.Name
                                        <small class="text-muted">@vaccine.DateAdministered.ToShortDateString()</small>
                                        <form asp-action="RemoveVaccine" method="post"
                                              asp-route-petId="@Model.Id" asp-route-vaccineId="@vaccine.Id">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="alert alert-warning">No vaccines recorded for this pet.</div>
                        }
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-controller="Admin" asp-action="ManagePets" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary" id="saveButton">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
            <script>
                $(document).ready(function() {
                    // Clear selections when switching between options
                    $('input[name="VaccineSelection.NewVaccineName"]').on('input', function() {
                        if ($(this).val().trim() !== '') {
                            $('select[name="VaccineSelection.SelectedVaccineId"]').val('');
                        }
                    });

                    $('select[name="VaccineSelection.SelectedVaccineId"]').change(function() {
                        if ($(this).val() !== '') {
                            $('input[name="VaccineSelection.NewVaccineName"]').val('');
                        }
                    });
                });
            </script>
}