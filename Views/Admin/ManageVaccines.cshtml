@model List<VeterinaryClinic.Models.Vaccine>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-syringe me-2"></i>Manage Vaccines</h3>
            <a asp-controller="Account" asp-action="Profile" class="btn btn-light">
                <i class="fas fa-arrow-left me-2"></i> Back to Profile
            </a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <form asp-action="AddVaccine" method="post" class="mb-4">
                <div class="input-group">
                    <input type="text" name="vaccineName" class="form-control"
                           placeholder="Enter new vaccine name" required>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add Vaccine
                    </button>
                </div>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Vaccine Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vaccine in Model)
                    {
                        <tr>
                            <td>@vaccine.Name</td>
                            <td>
                                <form asp-action="DeleteVaccine" method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this vaccine?');">
                                    <input type="hidden" name="id" value="@vaccine.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>