@model VeterinaryClinic.ViewModels.AddVaccineViewModel
<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4><i class="fas fa-syringe me-2"></i>Add Vaccine to @Model.PetName</h4>
        </div>
        <div class="card-body">
            <form asp-action="AddVaccineForm" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PetId" />
                <input type="hidden" asp-for="PetName" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="SelectedVaccineId" class="form-label">Select Vaccine</label>
                    <select asp-for="SelectedVaccineId" asp-items="Model.AvailableVaccines" class="form-select">
                        <option value="">-- Select Vaccine --</option>
                    </select>
                    <span asp-validation-for="SelectedVaccineId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateAdministered" class="form-label">Date Administered</label>
                    <input asp-for="DateAdministered" type="datetime-local" class="form-control" />
                    <span asp-validation-for="DateAdministered" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="EditPet" asp-route-id="@Model.PetId" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Pet
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-2"></i>Add Vaccine
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}